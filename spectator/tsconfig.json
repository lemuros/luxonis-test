{
  "extends": "../tsconfig.json",

  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "noEmit": true,
    "jsx": "react-jsx",

    "types": ["node", "vite/client"]
  },

  "include": ["src/**/*"]
}
